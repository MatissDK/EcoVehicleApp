@model Vidly.Models.Vehicle

@{
    ViewBag.Title = "Action";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form</h2>


@using(Html.BeginForm("Create","Vehicles"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Url)
        @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.address)
        @Html.TextBoxFor(m => m.address, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.type) Do some stuff?
        </label>
    </div>
    
    <div class="form-group input-group-sm">
        @Html.LabelFor(m => m.timestamp)
        @Html.TextBoxFor(model => model.timestamp, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })
        @*@Html.ValidationMessageFor(model => model.timestamp)*@
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    
}


